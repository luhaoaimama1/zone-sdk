<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zone.view.FlowLayout
        android:id="@+id/flowLayoutZone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="handler测试" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00ff00"
            android:gravity="center"
            android:text="Thread测试" />

        <Button
            android:id="@+id/asyncTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:text="AsyncTask测试" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00ff00"
            android:gravity="center"
            android:text=" EventBus and Retrofit2.0Sample 在类里 不是android代码" />

        <Button
            android:id="@+id/eventBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:text="eventBus" />


    </com.zone.view.FlowLayout>
</ScrollView>

